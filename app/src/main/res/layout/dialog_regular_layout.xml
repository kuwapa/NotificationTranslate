<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="14dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/regularDialogTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/medium_font"
                android:textColor="@color/md_grey_900"
                android:textSize="19sp"
                android:visibility="gone"
                tools:text="Title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/regularDialogMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/regularDialogTitleTextView"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/regular_font"
                android:textColor="@color/md_grey_800"
                android:textSize="15sp"
                android:visibility="gone"
                tools:text="This life is an imp line and this will not go on forever" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/regularDialogPositiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/regularDialogMessageTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/material_dialog_buttons_ripple"
                android:fontFamily="@font/medium_font"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:textAllCaps="true"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:visibility="gone"
                tools:ignore="NegativeMargin"
                tools:text="Save" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/regularDialogNegativeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/regularDialogMessageTextView"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:layout_toStartOf="@+id/regularDialogPositiveButton"
                android:background="@drawable/material_dialog_buttons_ripple"
                android:fontFamily="@font/medium_font"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:textAllCaps="true"
                android:textColor="@color/accent"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Cancel" />

        </RelativeLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>